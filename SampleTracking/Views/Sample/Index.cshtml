@model IEnumerable<SampleTracking.Models.Sample>
@{
    ViewData["Title"] = "Список пользователей";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-controller="Sample" asp-action="ShowCreate">Добавить</a>
</p>
<table class="table">
    <tr>
        <th>Наименование</th>
        <th>Шифр</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.No_</td>
        </tr>
    }
</table>